   "source": [
    "aa = int(input(\"숫자를 입력하시오: \"))\n",
    "total_sum = 0\n",
    "for i in range(0,aa+1,1):\n",
    "    total_sum += 2**i\n",
    "print(\"2^0부터 2^{0} 까지의 합은 {1}입니다.\".format(aa,total_sum))"
